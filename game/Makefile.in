VPATH = @srcdir@

all: cyvasse.js

check:
	(cd @srcdir@; pulp test)

clean:
	test -z cyvasse.js || rm -f cyvasse.js

cyvasse.js: \
		src/Cyvasse/Color.purs \
		src/Cyvasse/Piece.purs \
		src/Cyvasse/Terrain.purs \
		src/Cyvasse/Utils.purs \
		src/Main.purs
	(cd @srcdir@; pulp build --to @abs_builddir@/cyvasse.js)
